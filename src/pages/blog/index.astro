---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<BaseLayout title="Blog" description="Insights on nonprofit AI adoption, prompt engineering tips, and sector trends">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <h1 class="text-5xl font-bold mb-4">Blog</h1>
      <p class="text-xl text-gray-600 max-w-3xl">
        Insights on nonprofit AI adoption, prompt engineering best practices, and sector trends
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedPosts.map((post) => (
        <a
          href={`${base}/blog/${post.slug}`}
          class="bg-white rounded-lg shadow-sm hover:shadow-md transition border border-gray-200 hover:border-blue-400 overflow-hidden group"
        >
          {post.data.image && (
            <img
              src={post.data.image}
              alt={post.data.title}
              class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
            />
          )}
          <div class="p-6">
            {post.data.tags && (
              <div class="flex flex-wrap gap-2 mb-3">
                {post.data.tags.slice(0, 2).map((tag) => (
                  <span class="text-xs px-2 py-1 bg-blue-100 text-blue-800 rounded-full">{tag}</span>
                ))}
              </div>
            )}
            <h2 class="text-xl font-semibold mb-2 group-hover:text-blue-600 transition">{post.data.title}</h2>
            <p class="text-gray-600 mb-4 text-sm">{post.data.excerpt}</p>
            <div class="flex items-center gap-3 text-sm text-gray-500">
              <span>{post.data.author}</span>
              <span>â€¢</span>
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
              </time>
            </div>
          </div>
        </a>
      ))}
    </div>

    {sortedPosts.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">No blog posts yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>
