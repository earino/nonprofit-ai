---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "A comprehensive repository of AI prompts for nonprofit professionals" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Nonprofit.ai</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="bg-white shadow-sm border-b border-gray-200">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold text-blue-600 hover:text-blue-700">
            Nonprofit.ai
          </a>
          <div class="hidden md:flex space-x-6">
            <a href="/" class="text-gray-700 hover:text-blue-600">Home</a>
            <a href="/getting-started" class="text-gray-700 hover:text-blue-600">Getting Started</a>
            <a href="/about" class="text-gray-700 hover:text-blue-600">About</a>
            <a href="/contribute" class="text-gray-700 hover:text-blue-600">Contribute</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="min-h-screen">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Nonprofit.ai</h3>
            <p class="text-gray-400">AI prompts for nonprofit professionals</p>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="/getting-started" class="text-gray-400 hover:text-white">Getting Started</a></li>
              <li><a href="/about" class="text-gray-400 hover:text-white">About</a></li>
              <li><a href="/contribute" class="text-gray-400 hover:text-white">Contribute</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold mb-4">Legal</h4>
            <ul class="space-y-2">
              <li><a href="/privacy" class="text-gray-400 hover:text-white">Privacy Policy</a></li>
              <li><a href="/cookies" class="text-gray-400 hover:text-white">Cookie Policy</a></li>
            </ul>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
          <p>&copy; 2025 Nonprofit.ai. Open source and free forever.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
